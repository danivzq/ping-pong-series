doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/style.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')

  body(style='padding:50px')
    div.login
      div.logo
        img(src='/img/stratio_b.png')
        p(style='color:#000') PING PONG SERIES
      img(src='/img/stratio-ball.png')
      form#login-form.form-signin(action="/login", method="post")
        div
          input(type="text", name="username", placeholder="Username")
        div
          input(type="password", name="password", placeholder="Password")
        div
          a(href="#" onclick="document.getElementById('login-form').submit()") Submit
      p.error #{errorMessage}
